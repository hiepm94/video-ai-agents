    "version": "0.2.0",
    "configurations": [
        {
            "name": "[DEBUG]Run MCP",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/vaas_mcp/server.py",
            "python": "${command:python.interpreterPath}",
            "justMyCode": false,
            "args": [
                "--host", "0.0.0.0",
                "--port", "9090",
                "--transport", "streamable-http"],
            "env": {
                "LOGURU_LEVEL": "DEBUG",
            }
        },
        {
            "name": "[DEBUG]Run API",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/vaas_api/api.py",
            "python": "/app/.venv/bin/python",
            "args": [
                "--port", "8080",
                "--host", "0.0.0.0",]
        },
    ]
}